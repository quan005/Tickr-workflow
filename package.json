{
  "name": "tickr-workflow",
  "version": "1.0.0",
  "description": "Temporal worflow for Tickr",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --sequential build:tickr build:workflow",
    "build:tickr": "tsc --build ./tsconfig.json",
    "build:workflow": "ts-node ./src/scripts/build-workflow-bundle.ts",
    "lint": "eslint . --fix",
    "start": "npm-run-all -l --parallel start:worker start:client",
    "start:worker": "NODE_ENV=production node ./lib/worker.js",
    "start:client": "node ./lib/client.js",
    "dev:activities": "ts-node ./src/activities/priceActionPosition.ts",
    "dev:worker": "ts-node src/worker.ts",
    "dev:client": "ts-node src/client.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quan005/Tickr-workflow.git"
  },
  "author": "DaQuan Freeman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/quan005/Tickr-workflow/issues"
  },
  "homepage": "https://github.com/quan005/Tickr-workflow#readme",
  "keywords": [],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/cors": "^2.8.12",
    "@types/express-session": "^1.17.4",
    "@types/kafkajs": "^1.9.0",
    "@types/moment-timezone": "^0.5.30",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "nodemon": "^2.0.15",
    "ts-node-dev": "^1.1.8",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/http-proxy": "^1.17.8",
    "@types/tunnel": "^0.0.3",
    "axios": "^0.25.0",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "http-proxy": "^1.18.1",
    "kafkajs": "^1.15.0",
    "moment-timezone": "^0.5.34",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^13.5.0",
    "temporalio": "^1.2.0",
    "ts-node": "^10.9.1",
    "tunnel": "^0.0.6",
    "ws": "^8.4.0"
  }
}
