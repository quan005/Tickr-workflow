{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*", 
    "proxy", 
    "./src/certs/*", 
    "../src/interfaces/account.ts", 
    "../src/scripts/build-workflow-bundle.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}